{% macro feature(text) %}
  <li>{{ text }}</li>
{% endmacro %}

{% macro render(common, features) %}
  <div class="ws-device-features ws-modal-section awaits-styling">
    <h6 class="ws-modal-section-heading awaits-styling">{{ common.deviceModal.featuresHeadingText }}</h6>
    <ul>
      {% for text in features %}
        {{ feature(text) }}
      {% endfor %}
    </ul>
  </div>
{% endmacro %}
