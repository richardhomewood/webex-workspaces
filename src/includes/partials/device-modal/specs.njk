{% macro specification(spec) %}
  <li>
    {% if spec.icon %}
      {% set iconSize = [32, 32] %}
      {% if spec.iconSize %}
        {% set iconSize = spec.iconSize %}
      {% endif %}
      {% icon spec.icon, '', iconSize %}
    {% else %}
      <div class="ws-missing-icon"></div>
    {% endif %}
    <span>{{ spec.text }}</span>
  </li>
{% endmacro %}

{% macro render(common, specs) %}
  <div class="ws-device-specs ws-modal-section">
    <h6 class="ws-modal-section-heading">{{ common.deviceModal.specsHeadingText }}</h6>
    <ul>
      {% for spec in specs %}
        {{ specification(spec) }}
      {% endfor %}
    </ul>
  </div>
{% endmacro %}
