{% macro render(common, workspaceId, workspaces) %}
  <div class="ws-navigation-section">
    {% set isHeadingMultiline = common.categoryPage.navigationSection.heading.join %}
    {% if isHeadingMultiline %}
      {% set heading = common.categoryPage.navigationSection.heading.join('<br/>') %}
    {% else %}
      {% set heading = common.categoryPage.navigationSection.heading %}
    {% endif %}
    <h2>{{ heading | safe }}</h2>

    <div class="ws-navigation-section-text">{{ common.categoryPage.navigationSection.text }}</div>

    <a class="ws-cta ws-white-cta" href="/workspaces/explore.html"><span>{{ common.categoryPage.navigationSection.cta }}</span><span class="ws-cta-right-arrow">&nbsp;{% icon "cta-right-arrow", "", 14 %}</span></a>

    {{ backgroundImage(common.categoryPage.navigationSection.background) }}

  </div>
{% endmacro %}

{% macro backgroundImage(background) %}
  <div class="ws-navigation-section-background-image ws-XS ws-S ws-M">
    {% imagesync background.square, "", "", "", true, "100vw" %}
  </div>
  <div class="ws-navigation-section-background-image ws-L ws-XL">
    {% imagesync background.wide, "", "", "", true, "100vw" %}
  </div>
{% endmacro %}
