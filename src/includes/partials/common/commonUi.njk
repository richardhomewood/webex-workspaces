{% macro render(common, workspaces) %}
  <div class="ws-common-ui">
    <a href="/workspaces/explore.html#">{% icon "site-logo" %}</a>

    <div class="ws-workspace-nav" style="opacity: 0">
      <ul>
        {%- for workspaceId in common.orderedWorkspaceIds %}
          <li><a href="#/{{ workspaceId }}" class="ws-disabled">{{ workspaces[workspaceId].name }}</a></li>
        {%- endfor %}
      </ul>
      <div id="ws-nav-underline" class="ws-displayNone"></div>
    </div>
    {# The href in the following anchor element is a temporary change while category pages are not yet ready.
       In Phase 2, when they are ready, remove this href, and uncomment stuff in `spaces.js`.
       For https://jira.akqa.net/browse/SWW-209.
    #}
    <a href="{{ common.contactUrl }}" class="ws-about-cta ws-cta ws-transparent-cta" style="opacity: 0"><span class="ws-XS">{{ common.aboutWorkspaceCtaShortText }}</span><span class="ws-S ws-M ws-L ws-XL">{{ common.aboutWorkspaceCtaText }}</span></a>
  </div>
{% endmacro %}

{% macro renderForCategory(common, workspaces, selectedWorkspaceId) %}
  <div class="ws-common-ui">
    <div class="ws-common-ui-flank">
        <a href="/workspaces/explore.html#">{% icon "site-logo" %}</a>
    </div>
    <div class="ws-workspace-nav ws-S ws-M ws-L ws-XL">
      <ul>
        {%- for workspaceId in common.orderedWorkspaceIds %}
          <li {% if selectedWorkspaceId == workspaceId %} class="ws-selected"{% endif %}><a href="{{ workspaceId }}.html">{{ workspaces[workspaceId].name }}</a></li>
        {%- endfor %}
      </ul>
    </div>
    <div class="ws-common-ui-flank">
        <div class="ws-hamburger ws-XS">{% icon "hamburger-menu", "", [22, 10] %}</div>
        <span class="ws-S ws-M ws-L ws-XL"><a class="ws-contact-cta ws-cta ws-white-cta" href="{{ common.contactUrl }}"><span>{{ common.contactSalesCtaText }}</span></a></span>
    </div>
  </div>
  <div class="ws-hamburger-menu ws-XS ws-displayNone">
    <div class="ws-common-ui">
      <a href="/workspaces/explore.html#">{% icon "site-logo" %}</a>
      <a class="ws-modal-close" aria-label="Close" >{% icon "close-x", "ws-close-x", [17, 17] %}</a>
    </div>
    <div class="ws-menu-items">
      <ul>
        {%- for workspaceId in common.orderedWorkspaceIds %}
          {% if selectedWorkspaceId == workspaceId %}
            <li  class="ws-selected"><span>{{ workspaces[workspaceId].name }}</span></li>
          {% else %}
            <li><a href="{{ workspaceId }}.html">{{ workspaces[workspaceId].name }}</a></li>
          {% endif %}


        {%- endfor %}
      </ul>
      <a class="ws-contact-cta ws-cta ws-white-cta" href="{{ common.contactUrl }}"><span>{{ common.contactSalesCtaText }}</span></a>
    </div>
  </div>
{% endmacro %}
