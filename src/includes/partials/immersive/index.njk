{% import "../common/commonUi.njk" as commonUi %}
{% import "./initialView.njk" as initialView %}
{% import "./roomView.njk" as roomView %}
{% import "./modal-layer.njk" as modalLayer %}

{% macro render(common, workspaces, devicesByRoom, devices, softwareByRoom, software) %}
  <div id="ws-immersive-root">

    {{ modalLayer.render(common, workspaces, devicesByRoom, devices, softwareByRoom, software) }}

    {{ commonUi.render(common, workspaces) }}

    {{ initialView.render(common, workspaces) }}

    {{ roomView.render(common, workspaces, devices) }}

  </div>
{% endmacro %}
